<h1>Listing movies</h1>

<table>
  <thead>
    <tr>
      <th>Moviename</th>
      <th>Show</th>
      <th>Date</th>
      <th>Time</th>
      <th>Numberofseats</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.moviename %></td>
        <td><%= movie.show %></td>
        <td><%= movie.date %></td>
        <td><%= movie.time %></td>
        <td><%= movie.numberofseats %></td>
        <td><%= link_to 'Show', movie %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

